---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntry } from "astro:content";
import Swiper from "swiper";

const ambulanceservice = await getEntry("ambulance-service", "-index");
const { Content } = await ambulanceservice.render();
const { title, description, meta_title } = ambulanceservice.data;
