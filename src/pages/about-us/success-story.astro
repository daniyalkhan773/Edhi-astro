---
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";

const successstory = await getEntry("success-story", "-index");
const { Content } = await successstory.render();
const { title, description, meta_title } = successstory.data;
---

<Base title={title} meta_title={meta_title} description={description}>
  <!-- heading started  -->
  <section class="relative pt-32 lg:pt-36 pb-20">
    <div
      class="mx-auto lg:max-w-7xl w-full px-5 sm:px-10 md:px-12 lg:px-5 flex flex-col lg:flex-row gap-10 lg:gap-12"
    >
      <div
        class="absolute w-full lg:w-1/2 inset-y-0 lg:right-0 hidden lg:block"
      >
        <span
          class="absolute -left-6 md:left-4 top-24 lg:top-28 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-green-400 blur-xl opacity-60 lg:opacity-95 lg:block hidden"
        ></span>
        <span
          class="absolute right-4 bottom-12 w-24 h-24 rounded-3xl bg-blue-600 blur-xl opacity-80"
        ></span>
      </div>
      <span
        class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-blue-600 to-green-400 absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"
      ></span>
      <div
        class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8
            lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2"
      >
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
            font-bold text-gray-900 dark:text-white"
        >
          Success
          <span
            class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-blue-600 via-30% to-green-600"
            >Story</span
          >
        </h1>
        <p class="mt-8 text-gray-700 dark:text-black">
          Meet our inspiring success stories, individuals who overcame
          challenges and achieved their dreams.
        </p>
        <div class="mt-10 w-full flex max-w-md mx-auto lg:mx-0">
          <div class="flex sm:flex-row flex-col gap-5 w-full"></div>
        </div>
      </div>

      <div
        class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl"
      >
        <img
          src="/images/success-story.jpg"
          alt="Hero image"
          width="2350"
          height="2359"
          class="object-cover w-full rounded shadow-lg sm:h-30rem h-96 mt-[-30px]"
        />
      </div>
    </div>
  </section>

  <!-- heading ended  -->
  <!-- main section started -->
